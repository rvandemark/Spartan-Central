<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">

	<!-- Servlets -->
	<servlet>
		<servlet-name>IndexServlet</servlet-name>
		<servlet-class>edu.ycp.spartan_central.servlet.IndexServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AboutServlet</servlet-name>
		<servlet-class>edu.ycp.spartan_central.servlet.AboutServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>FindUsServlet</servlet-name>
		<servlet-class>edu.ycp.spartan_central.servlet.FindUsServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>TheStudentsServlet</servlet-name>
		<servlet-class>edu.ycp.spartan_central.servlet.TheStudentsServlet</servlet-class>
	</servlet>

	<!-- AJAX servlets. -->

	<!-- Servlet mappings -->
	<servlet-mapping>
		<servlet-name>IndexServlet</servlet-name>
		<url-pattern>/index</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AboutServlet</servlet-name>
		<url-pattern>/about</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>FindUsServlet</servlet-name>
		<url-pattern>/findUs</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>TheStudentsServlet</servlet-name>
		<url-pattern>/theStudents</url-pattern>
	</servlet-mapping>

	<!-- AJAX servlet mappings. -->

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
